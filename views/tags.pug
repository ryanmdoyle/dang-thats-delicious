extends layout

include mixins/_storeCard

block content
  .inner
    h2 #{tag || 'Tags'}
    ul.tags
      for t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            //- the id is coming from the aggregation pipeline (as is the count below)
            span.tag__count= t.count
    .stores
      each store in stores
        +storeCard(store)
        